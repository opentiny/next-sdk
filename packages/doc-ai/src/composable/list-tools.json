[
  {
    "name": "product-status-select_base_select_component_tools",
    "description": "商品状态的选择器-下拉组件相关工具集合，包含获取下拉数据、选中下拉数据，清除选中值等功能",
    "inputSchema": {
      "type": "object",
      "properties": {
        "openMenu": {
          "type": "boolean",
          "description": "打开下拉面板"
        },
        "selectByLabel": {
          "type": "string",
          "description": "根据标签选中下拉数据"
        },
        "clearValue": {
          "type": "string",
          "description": "清除下拉值"
        },
        "getOptions": {
          "type": "string",
          "description": "查询下拉选择的所有选项值"
        }
      },
      "required": ["openMenu", "selectByLabel", "clearValue", "getOptions"],
      "additionalProperties": false,
      "$schema": "http://json-schema.org/draft-07/schema#"
    }
  },
  {
    "name": "product-category-select_base_select_component_tools",
    "description": "商品分类的选择器-下拉组件相关工具集合，包含获取下拉数据、选中下拉数据，清除选中值等功能",
    "inputSchema": {
      "type": "object",
      "properties": {
        "openMenu": {
          "type": "boolean",
          "description": "打开下拉面板"
        },
        "selectByLabel": {
          "type": "string",
          "description": "根据标签选中下拉数据"
        },
        "clearValue": {
          "type": "string",
          "description": "清除下拉值"
        },
        "getOptions": {
          "type": "string",
          "description": "查询下拉选择的所有选项值"
        }
      },
      "required": ["openMenu", "selectByLabel", "clearValue", "getOptions"],
      "additionalProperties": false,
      "$schema": "http://json-schema.org/draft-07/schema#"
    }
  },
  {
    "name": "product-list_grid_component_tools",
    "description": "商品列表-表格组件相关工具集合，包含滚动到指定行、表格全选等功能",
    "inputSchema": {
      "type": "object",
      "properties": {
        "scrollToRow": {
          "type": "object",
          "additionalProperties": {},
          "description": "滚动到指定行，需要传递需要滚动的行的数据，要求数据中包含\"_RID\"字段"
        },
        "getColumns": {
          "type": "boolean",
          "description": "获取表格列配置,\"property\" 字段代表表格数据的字段属性,\"title\" 代表表格列的标题"
        },
        "getTableData": {
          "type": "boolean",
          "description": "获取表格数据"
        },
        "setSelection": {
          "type": "object",
          "additionalProperties": {},
          "description": "选中或者选择表格一条数据，需要传递需要选中的数据，要求：选中之前先滚动到选中行，要求数据中包含\"_RID\"字段"
        },
        "setAllSelection": {
          "type": "boolean",
          "description": "用来设置表格全选状态,true:全选,false:取消全选"
        },
        "insertRow": {
          "type": "object",
          "additionalProperties": {},
          "description": "插入或者新增一行数据，需要先获取表格数据，根据表格数据的格式新增对应的数据"
        },
        "updateRow": {
          "type": "object",
          "additionalProperties": {},
          "description": "更新修改表格中指定行数据，需要传递需要更新的数据，要求数据中包含\"_RID\"字段"
        },
        "removeRow": {
          "type": "object",
          "additionalProperties": {},
          "description": "删除表格中指定行，需要传递需要删除的数据，要求数据中包含\"_RID\"字段"
        }
      },
      "additionalProperties": false,
      "$schema": "http://json-schema.org/draft-07/schema#"
    }
  }
]
